{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "agent/dist",
    "baseUrl": ".",
    "paths": {
      "@helpers/*": ["./helpers/*"],
      "@lib/*": ["./lib/*"]
    },
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "agent/dist", ".data"]
}
